<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_1"
    android:orientation="vertical" >

    <include
        android:id="@+id/login_view_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.2"
        layout="@layout/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/login_view_main_margin"
        android:layout_marginRight="@dimen/login_view_main_margin"
        android:layout_weight="0.8"
        android:background="@drawable/login_section_shape" >

        <LinearLayout
            android:id="@+id/login_view_login_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/login_view_main_padding" >

            <TextView
                android:id="@+id/login_view_host_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="@string/login_view_host_label"
                android:textColor="@color/label_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_view_host_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="http://aes.srebrny.pl" />

            <TextView
                android:id="@+id/login_view_email_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="@string/login_view_email_label"
                android:textColor="@color/label_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_view_email_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="user" />

            <TextView
                android:id="@+id/login_view_password_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="10dp"
                android:text="@string/login_view_password_label"
                android:textColor="@color/label_font"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_view_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:inputType="textPassword"
                android:text="password" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:height="1px" />

            <Button
                android:id="@+id/login_view_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/orange_round_shape"
                android:text="@string/login_view_login_button"
                android:textColor="@color/secondary_1"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>